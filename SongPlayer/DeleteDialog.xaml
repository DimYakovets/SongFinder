<Window x:Class="SongPlayer.DeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongPlayer"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="#FFAAAAAA"
        Title="Delete Dialog" Height="164.085" Width="410"
        WindowStartupLocation="CenterScreen"
        Icon="icon.ico">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Label" Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Center" Text="" HorizontalAlignment="Center" FontSize="20"/>
        <Button Name="DeleteB" Click="Delete" Margin="5" Background="LightBlue" Grid.Row="2" Content="Видалити" FontSize="14"/>
        <Button Name="CancelB" Click="Cancel" Margin="5" Background="LightBlue" Grid.Row="2" Content="Відміна" FontSize="17" Grid.Column="1"/>
    </Grid>
</Window>
